<?xml version="1.0" encoding="utf-8"?>
<!-- // Inspiration taken from https://sendbird.com/blog/android-chat-tutorial-building-a-messaging-ui -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_rectangle_secondary"
        android:maxWidth="300dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/messageContent"
        app:layout_constraintStart_toEndOf="@+id/messageContent"
        tools:text="11:12" />
</androidx.constraintlayout.widget.ConstraintLayout>